<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="6dip">

	<ImageView
		android:id="@+id/flag"
		android:layout_width="36dp"
		android:layout_height="27dp"
		android:layout_gravity="center_vertical"
		android:contentDescription="@string/flag_content_description"/>

	<GridLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/flag"
		android:layout_alignParentRight="true"
		android:layout_marginLeft="4dp"
		android:columnCount="2"
		tools:ignore="RtlHardcoded">

		<TextView android:id="@+id/callsign" android:layout_columnWeight="3"/>
		<TextView android:id="@+id/strength" android:layout_columnWeight="1"/>
		<TextView android:id="@+id/main_info" android:layout_columnWeight="3"/>
		<TextView android:id="@+id/timestamp" android:layout_columnWeight="1"/>

	</GridLayout>

</RelativeLayout>